@model PhotographyApp.Models.Package
<link rel="stylesheet" href="~/css/site.css" />

<h2>Redigera Paket</h2>

<!-- Formulär för att redigera ett paket -->
<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <!-- Fält för att redigera paketets namn -->
        <label asp-for="Name">Paketnamn</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> <!-- Visar valideringsfel för namn -->
    </div>
    <div class="form-group">
        <!-- Fält för att redigera paketets beskrivning -->
        <label asp-for="Description">Beskrivning</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span> <!-- Visar valideringsfel för beskrivning -->
    </div>
    <div class="form-group">
        <!-- Fält för att redigera paketets pris -->
        <label asp-for="Price">Pris</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span> <!-- Visar valideringsfel för pris -->
    </div>
    
    <!-- Visa befintliga bilder -->
    <div class="form-group">
        <label>Befintliga Bilder</label>
        @if (Model.ImagePaths != null && Model.ImagePaths.Any())
        {
            <div class="existing-images">
                @foreach (var imagePath in Model.ImagePaths)
                {
                    <div class="image-container">
                        <img src="@Url.Content(imagePath)" alt="Package Image" class="img-thumbnail" style="max-width: 150px;" />
                    </div>
                }
            </div>
        }
        else
        {
            <p>Inga befintliga bilder.</p>
        }
    </div>

    <!-- Fält för att ladda upp nya bilder -->
    <div class="form-group">
        <label>Lägg till nya bilder</label>
        <input type="file" name="images" multiple class="form-control-file" />
    </div>
    
    <!-- Knapp för att spara ändringar -->
    <button type="submit" class="btn btn-primary">Spara ändringar</button>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka till listan</a> <!-- Länk för att gå tillbaka till paketlistan -->
</form>
