@model PhotographyApp.Models.User
<link rel="stylesheet" href="~/css/site.css" />

<!-- Rubrik för sidan -->
<h2>Registrera</h2>

<!-- Formulär för registrering som skickar data till Register-aktion i kontrollern -->
<form asp-action="Register">
    <!-- Grupp för användarnamn -->
    <div class="form-group">
        <!-- Etikett för användarnamn kopplad till UserName i modellen -->
        <label asp-for="UserName"></label>
        <!-- Textfält för inmatning av användarnamn -->
        <input asp-for="UserName" class="form-control" />
        <!-- Valideringsmeddelande för användarnamn, visas om det finns valideringsfel -->
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <!-- Grupp för lösenord -->
    <div class="form-group">
        <!-- Etikett för lösenord kopplad till Password i modellen -->
        <label asp-for="Password"></label>
        <!-- Textfält för inmatning av lösenord, type="password" döljer texten som skrivs -->
        <input asp-for="Password" class="form-control" type="password" />
        <!-- Valideringsmeddelande för lösenord, visas om det finns valideringsfel -->
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- Knapp för att skicka formuläret, stylad som en primär knapp -->
    <button type="submit" class="btn btn-primary">Registrera</button>
</form>

<!-- Länk för att gå tillbaka till inloggningssidan, stylad som en sekundär knapp -->
<a asp-action="Login" class="btn btn-secondary">Tillbaka till inloggning</a>
