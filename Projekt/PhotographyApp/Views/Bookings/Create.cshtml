@model PhotographyApp.Models.Booking

<h2>Skapa Bokning</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CustomerName">Namn</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CustomerEmail">Email</label>
        <input asp-for="CustomerEmail" class="form-control" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Datum</label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PackageId">Paket</label>
        <select asp-for="PackageId" class="form-control" asp-items="ViewBag.Packages">
            <option value="">VÃ¤lj ett paket</option>
        </select>
        <span asp-validation-for="PackageId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Boka</button>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka till paketen</a>
</form>
